<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/add_token_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/scan_to_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scan to add" />

        <Button
            android:layout_width="match_parent"
            android:clickable="false"
            android:text="or"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/token_address_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Paste Token Address"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/add_token_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Cannot add token!! Make sure you are on the right channel. i.e Mainnet"
            android:lineSpacingExtra="2dp"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="#ff0000"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/load_token_info"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text="Load" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/token_preview"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Name"
            android:lineSpacingExtra="2dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/token_preview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Savedroid"
            android:lineSpacingExtra="2dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Symbol"
            android:lineSpacingExtra="2dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/token_preview_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="SVD"
            android:lineSpacingExtra="2dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Decimals"
            android:lineSpacingExtra="2dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/preview_token_dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="8"
            android:lineSpacingExtra="2dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/save_token_btn"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Add Token" />
    </LinearLayout>

</RelativeLayout>